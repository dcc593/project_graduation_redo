                    <% @saturday_array.each do |element| %>
                      <% if element.booking == 1 %>
                        <div class= "btn tue-slot active-day" data-schedule-id="<%=element.id%>"><center><h6><%= element.time %></h6></center></div>
                      <% elsif element.booking == 0 %>
                        <<div class= "tue-slot non-active-day"><center><h6><%= element.time %></h6></center></div>
                      <% end %>
                    <% end %>
            </div>

            <div class= "col-sm-2">
              <center><h4 class = "sch-text"> Sunday</h4></center>                     
                  <% @sunday_array.each do |element| %>
                     <% if element.booking == 1 %>
                       <div class= "btn tue-slot active-day" data-schedule-id="<%=element.id%>"><center><h6><%= element.time %></h6></center></div>
                     <% elsif element.booking == 0 %>
                       <<div class= "tue-slot non-active-day"><center><h6><%= element.time %></h6></center></div>
                     <% end %>
                  <% end %>
             </div>
            </div>
      </div>
