            <div class= "row">
              <div class= "col-sm-4">
                <div class="page-header"><h2>Upload Photo</h2></div>

                 <!-- Step #2: Submit the form -->
                <%= form_for @photo, url: "/profiles/barber" do |f| %>


                  <div class="form-group">
                    <%= f.label :haircut %>
                    <%= f.text_field :haircut, class: 'form-control' %>
                  </div>

                  <div class="form-group">
                    <%= f.label :image %>
                    <%= f.file_field :image, class: 'form-control'%>
                  </div>

                  <%= f.submit 'Upload', class: 'btn btn-primary' %>
                <% end %>
              </div>

              <div class= "col-sm-8">
                <div>
                  <br>
                  <% @all_photos.each do |eachPhoto| %>
                  
                  <%=image_tag(eachPhoto.image.url(:thumb), class: 'media-object')%>
                  
                  <%= link_to "Remove", "/profiles/#{eachPhoto.id}", class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
                    
              
                   <!-- <span><%= eachPhoto.id %></span> -->
                  <% end %>
                </div>
              </div>
            </div>
