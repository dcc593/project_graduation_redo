      <div class= "col-sm-8 schedule">
       <center><h2 class = "sch-text"> SCHEDULE</h2></center>
          <div class= "row">
    
            <div class= "col-sm-2">
              <center><h4 class = "sch-text"> Tuesday</h4></center>             
                  <% @tuesday_array.each do |element| %>
                    <% if element.booking == 1 %>
                      <div class= "btn tue-slot active-day" data-schedule-id="<%=element.id%>"><center><h6><%= element.time %></h6></center></div>
                    <% elsif element.booking == 0 %>
                      <<div class= "tue-slot non-active-day"><center><h6><%= element.time %></h6></center></div>
                    <% end %>
                  <% end %>              
            </div>

            <div class= "col-sm-2">
              <center><h4 class = "sch-text"> Wednesday</h4></center>               
                  <% @wednesday_array.each do |element| %>
                    <% if element.booking == 1 %>
                      <div class= "btn tue-slot active-day" data-schedule-id="<%=element.id%>"><center><h6><%= element.time %></h6></center></div>
                    <% elsif element.booking == 0 %>
                      <<div class= "tue-slot non-active-day"><center><h6><%= element.time %></h6></center></div>
                    <% end %>
                  <% end %>                 
            </div>

            <div class= "col-sm-2">
              <center><h4 class = "sch-text"> Thursday</h4></center>                
                  <% @thursday_array.each do |element| %>
                    <% if element.booking == 1 %>
                      <div class= "btn tue-slot active-day" data-schedule-id="<%=element.id%>"><center><h6><%= element.time %></h6></center></div>
                    <% elsif element.booking == 0 %>
                      <<div class= "tue-slot non-active-day"><center><h6><%= element.time %></h6></center></div>
                    <% end %>
                  <% end %>                 
            </div>

            <div class= "col-sm-2">
              <center><h4 class = "sch-text"> Friday</h4></center>               
                <% @friday_array.each do |element| %>
                  <% if element.booking == 1 %>
                    <div class= "btn tue-slot active-day" data-schedule-id="<%=element.id%>"><center><h6><%= element.time %></h6></center></div>
                  <% elsif element.booking == 0 %>
                    <<div class= "tue-slot non-active-day"><center><h6><%= element.time %></h6></center></div>
                  <% end %>
                <% end %>           
            </div>

            <div class= "col-sm-2">
