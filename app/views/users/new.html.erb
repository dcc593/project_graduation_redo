    <div class="col-sm-4 background-solid">
        <center>
          <h1>Sign up!</h1>

          <%= form_for :user, url: '/registration' do |f| %>

            <%= f.text_field :first_name, placeholder: "First Name" %><br>
            <%= f.text_field :last_name, placeholder: "Last Name"  %><br>
            <%= f.text_field :username, placeholder: "Username"  %><br>
            <%= f.text_field :email, placeholder: "Email"  %><br>
            <%= f.text_field :role, placeholder: "Role"  %><br>
            <%= f.password_field :password, placeholder: "Password"  %><br>
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password"  %><br>

           <!--  <select name="user[role]">
                <option value="user">User</option>
               <option value="barber">Barber</option>
               </select> -->

            <%= f.submit "Submit" %>
          <% end %>

          <br>

          <h1>Login</h1>
            <%= form_tag  '/login' do %>
            	   <%= text_field_tag :email,nil, placeholder: 'Email' %><br>
                 <%= password_field_tag :password, nil, placeholder: 'Password' %><br>

            	   <%= submit_tag "Log In" %>
            <% end %>

          <br>

          <%= link_to "All profiles", "/users" %>

        </center>
      </div>
    </div>

      <div class="col-sm-4">
      </div>

